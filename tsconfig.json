{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "strict": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "sodiumjs": [
        "node_modules/sodiumjs/*"
      ],
      "*": [
        "node_modules/@types/*",
        "*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}